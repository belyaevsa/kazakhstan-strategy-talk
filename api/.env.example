# Database Configuration
# You can either provide individual connection parameters:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kazakhstan_strategy
DB_USER=postgres
DB_PASSWORD=your_secure_password

# OR provide a complete connection string (this takes precedence):
# DB_CONNECTION_STRING=Host=localhost;Port=5432;Database=kazakhstan_strategy;Username=postgres;Password=your_password

# JWT Configuration
JWT_KEY=GenerateASecureRandomKeyAtLeast32CharactersLongForProduction!
JWT_ISSUER=KazakhstanStrategyApi
JWT_AUDIENCE=KazakhstanStrategyClient

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@strategy.kz
EMAIL_FROM_NAME=Kazakhstan IT Strategy

# App Configuration
APP_BASE_URL=http://localhost:8080

# AWS/Yandex Object Storage (S3-compatible)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=ru-central1
AWS_S3_SERVICE_URL=https://storage.yandexcloud.net
AWS_S3_BUCKET_NAME=your-bucket-name

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:7001;http://localhost:5001
